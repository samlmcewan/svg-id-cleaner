{
  "name": "svg-cleaner",
  "displayName": "SVG ID Cleaner",
  "author": "Sam Lewis McEwan",
  "description": "Assigns unique IDs to SVG elements and their children, preventing HTML validation errors",
  "keywords": [
    "svg",
    "unique-id",
    "validation"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samlmcewan/svg-id-cleaner"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:svg-cleaner.helloWorld",
    "onCommand:svg-cleaner.cleanSVGIds",
    "onLanguage:html",
    "onWorkspaceOpen"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "svg-cleaner.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "svg-cleaner.cleanSVGIds",
        "title": "Clean SVG IDs"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "svg-cleaner.cleanSVGIds",
          "when": "resourceLangId == html",
          "group": "modification"
        }
      ],
      "statusBarItem": [
        {
          "id": "svg-cleaner.cleanSVGIds",
          "name": "$(north-star) Clean SVG IDs",
          "alignment": "left",
          "priority": 1000,
          "submenu": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
